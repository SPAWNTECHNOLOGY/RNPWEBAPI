@page
@model Test.Pages.OrdersModel
@{
    ViewData["Title"] = "Заказы Wildberries";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Фильтр по дате -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="dateFrom" class="form-label">Дата начала:</label>
                    <input type="datetime-local" 
                           class="form-control" 
                           id="dateFrom" 
                           name="dateFrom" 
                           value="@Model.DateFrom.ToString("yyyy-MM-ddTHH:mm")">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <input type="hidden" name="load" value="true" />
                    <button type="submit" class="btn btn-primary">Загрузить данные</button>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <!-- Статистика -->
    @if (Model.Orders.Any())
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Всего заказов</h5>
                        <p class="card-text fs-3">@Model.Orders.Count</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Общая сумма</h5>
                        <p class="card-text fs-3">@Model.Orders.Sum(o => o.FinishedPrice).ToString("N0") ₽</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Средний чек</h5>
                        <p class="card-text fs-3">@Model.Orders.Average(o => o.FinishedPrice).ToString("N0") ₽</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Средняя скидка</h5>
                        <p class="card-text fs-3">@Model.Orders.Average(o => o.DiscountPercent).ToString("N0")%</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Таблица заказов -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Дата</th>
                                <th>Артикул</th>
                                <th>Товар</th>
                                <th>Размер</th>
                                <th>Бренд</th>
                                <th>Склад</th>
                                <th>Регион</th>
                                <th>Цена</th>
                                <th>Скидка</th>
                                <th>Итого</th>
                                <th>Статус</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders.OrderByDescending(o => o.Date))
                            {
                                <tr>
                                    <td>@order.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td><small>@order.SupplierArticle</small></td>
                                    <td>
                                        <div>@order.Subject</div>
                                        <small class="text-muted">@order.Category</small>
                                    </td>
                                    <td>@order.TechSize</td>
                                    <td>@order.Brand</td>
                                    <td><small>@order.WarehouseName</small></td>
                                    <td><small>@order.RegionName</small></td>
                                    <td>
                                        <s>@order.TotalPrice ₽</s>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger">-@order.DiscountPercent%</span>
                                    </td>
                                    <td>
                                        <strong>@order.FinishedPrice ₽</strong>
                                    </td>
                                    <td>
                                        @if (order.IsCancel)
                                        {
                                            <span class="badge bg-secondary">Отменён</span>
                                        }
                                        else if (order.IsRealization)
                                        {
                                            <span class="badge bg-success">Реализация</span>
                                        }
                                        else if (order.IsSupply)
                                        {
                                            <span class="badge bg-info">Поставка</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Нет данных для отображения. Выберите дату и нажмите "Загрузить данные".
        </div>
    }
</div>

